#
# Docker file used in GitHub Actions run coverage tests.
#

FROM python:3.8-slim
LABEL maintainer="aheimsbakk@met.no, mortenwh@met.no"

RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    pip install \
        "coverage==5.1" \
        "coveralls>=2" \
        "lxml==4.5" \
        "netCDF4>=1.5,<=1.6" 

VOLUME /src
WORKDIR /src

